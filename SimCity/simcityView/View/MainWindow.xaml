<Window x:Class="simcityView.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:simcityView"
        mc:Ignorable="d"
        Title="MainWindow" Height="730" Width="1280" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="550"/>
            <RowDefinition Height="120"/>
        </Grid.RowDefinitions>
        <Menu Grid.Row="0" FontSize="15">
            <Menu.ItemsPanel>
                <ItemsPanelTemplate>
                    <DockPanel/>
                </ItemsPanelTemplate>
            </Menu.ItemsPanel>
            <MenuItem Header="📁Fájl">
                <MenuItem Header="💿Betöltés"/>
                <MenuItem Header="💾Mentés"/>
            </MenuItem>
            <MenuItem Header="❔Sugó"/>
            <MenuItem Header="XD" HorizontalAlignment="Right"/>
        </Menu>
        
        <ItemsControl HorizontalAlignment="left" VerticalAlignment="top" Margin="0,0" Grid.Row="1" ItemsSource="{Binding Cells}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Rows="10" Columns="10"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.RenderTransform>
                <TransformGroup>
                    <SkewTransform CenterX="0.5" CenterY="0.5" AngleX="20" AngleY="10"/>
                    <RotateTransform CenterX="0.5" CenterY="0.5" Angle="315"/>
                    <TranslateTransform X="50" Y="170"/>
                    <ScaleTransform CenterX="0.5" CenterY="0.5" ScaleX="1.2" ScaleY="1.2"/>
                </TransformGroup>
            </ItemsControl.RenderTransform>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Button Width="30" Height="30" Command="{Binding ClickCom}">
                            <Button.Background>
                                <ImageBrush ImageSource="{Binding FloorTexture}"/>
                            </Button.Background>
                        </Button>
                        <Image Width="30" Height="30" Source="{Binding BuildingTexture}" RenderTransformOrigin="0.5,0.5" IsHitTestVisible="False">
                            <Image.RenderTransform>
                                <TransformGroup>
                                    <RotateTransform CenterX="0.5" CenterY="0.5" Angle="-315"/>
                                    <SkewTransform CenterX="0.5" CenterY="0.5" AngleX="-20" AngleY="-10"/>
                                    <TranslateTransform X="5" Y="-5"/>
                                </TransformGroup>
                            </Image.RenderTransform>
                        </Image>
                    </Grid>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        <TabControl Grid.Row="2" FontSize="15" SelectedIndex="{Binding alma, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
            

            <TabItem Header="Zónák">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Stretch" HorizontalAlignment="Center">
                    <Border BorderThickness="1" BorderBrush="DeepPink">
                        <StackPanel Orientation="Vertical">
                            <RadioButton GroupName="zones" Width="140">Lakó</RadioButton>
                            <Image Source="Textures/missing_texture.png" Width="64"/>
                        </StackPanel>
                    </Border>

                    <Border BorderThickness="1" BorderBrush="DeepPink">
                        <StackPanel Orientation="Vertical">
                            <RadioButton GroupName="zones" Width="140">Ipari</RadioButton>
                            <Image Source="Textures/missing_texture.png" Width="64"/>
                        </StackPanel>
                    </Border>

                    <Border BorderThickness="1" BorderBrush="DeepPink">
                        <StackPanel Orientation="Vertical">
                            <RadioButton GroupName="zones" Width="140">Szolgáltatási</RadioButton>
                            <Image Source="Textures/missing_texture.png" Width="64"/>
                        </StackPanel>
                    </Border>

                </StackPanel>
            </TabItem>
            <TabItem Header="Kiszolgáló épületek">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Stretch" HorizontalAlignment="center">
                    <Border BorderThickness="1" BorderBrush="DeepPink">
                        <StackPanel Orientation="Vertical">
                            <RadioButton GroupName="zones" Width="140">Lakó</RadioButton>
                            <Image Source="Textures/missing_texture.png" Width="64"/>
                        </StackPanel>
                    </Border>
                    
                </StackPanel>
            </TabItem>
            <TabItem Header="Költségek" >
                
            </TabItem>
        </TabControl>
    </Grid>
</Window>
