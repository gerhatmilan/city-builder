<Window x:Class="simcityView.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:simcityView"
        mc:Ignorable="d"
        Title="MainWindow" Height="740" Width="1280" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="550"/>
            <RowDefinition Height="130"/>
        </Grid.RowDefinitions>
       
        
        <ItemsControl HorizontalAlignment="left" VerticalAlignment="top" Margin="0,0" Grid.Row="1" ItemsSource="{Binding Cells}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Rows="10" Columns="10"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.RenderTransform>
                <TransformGroup>
                    <SkewTransform CenterX="0.5" CenterY="0.5" AngleX="20" AngleY="10"/>
                    <RotateTransform CenterX="0.5" CenterY="0.5" Angle="315"/>
                    <TranslateTransform X="250" Y="250"/>
                    <ScaleTransform CenterX="0.5" CenterY="0.5" ScaleX="1.2" ScaleY="1.2"/>
                </TransformGroup>
            </ItemsControl.RenderTransform>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Button Width="30" Height="30" Command="{Binding ClickCom}" Background="{Binding FloorTexture}">
                        </Button>
                        <Image Width="30" Height="30" Source="{Binding BuildingTexture}" RenderTransformOrigin="0.5,0.5" IsHitTestVisible="False">
                            <Image.RenderTransform>
                                <TransformGroup>
                                    <RotateTransform CenterX="0.5" CenterY="0.5" Angle="-315"/>
                                    <SkewTransform CenterX="0.5" CenterY="0.5" AngleX="-20" AngleY="-10"/>
                                    <TranslateTransform X="5" Y="-5"/>
                                </TransformGroup>
                            </Image.RenderTransform>
                        </Image>
                    </Grid>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        <Menu Grid.Row="0" FontSize="15">
            <Menu.ItemsPanel>
                <ItemsPanelTemplate>
                    <DockPanel/>
                </ItemsPanelTemplate>
            </Menu.ItemsPanel>
            <MenuItem Header="📁Fájl">
                <MenuItem Header="💿Betöltés"/>
                <MenuItem Header="💾Mentés"/>
            </MenuItem>
            <MenuItem Header="❔Sugó"/>
            <MenuItem Header="{Binding InfoText}" HorizontalAlignment="Right"/>
        </Menu>
        <TabControl Grid.Row="2" FontSize="15" SelectedIndex="{Binding alma, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
            

            <TabItem Header="Zónák">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Stretch" HorizontalAlignment="Center">
                    <Border BorderThickness="1" BorderBrush="DeepPink">
                        <StackPanel Orientation="Vertical">
                            <RadioButton GroupName="buildable1" Width="140" Name="Residental" Command="{Binding SelectedBuildable}" IsChecked="True">Lakó</RadioButton>
                            <Image Source="Textures/house_small_yellow_a.png" Width="64"/>
                        </StackPanel>
                    </Border>

                    <Border BorderThickness="1" BorderBrush="DeepPink">
                        <StackPanel Orientation="Vertical">
                            <RadioButton GroupName="buildable1" Width="140" Name="Industrial" Command="{Binding SelectedBuildable}">Ipari</RadioButton>
                            <Image Source="Textures/warehouse_orange_a.png" Width="64"/>
                        </StackPanel>
                    </Border>

                    <Border BorderThickness="1" BorderBrush="DeepPink">
                        <StackPanel Orientation="Vertical">
                            <RadioButton GroupName="buildable1" Width="140" Name="Office" Command="{Binding SelectedBuildable}">Szolgáltatási</RadioButton>
                            <Image Source="Textures/building_tall_yellow_a.png" Width="64"/>
                        </StackPanel>
                    </Border>

                </StackPanel>
            </TabItem>
            <TabItem Header="Kiszolgáló épületek">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Stretch" HorizontalAlignment="center">
                    <Border BorderThickness="1" BorderBrush="DeepPink">
                        <StackPanel Orientation="Vertical">
                            <RadioButton GroupName="buildable2" Width="140" Name="Road" Command="{Binding SelectedBuildable}" IsChecked="True">Út</RadioButton>
                            <Image Source="Textures/missing_texture.png" Width="64"/>
                        </StackPanel>
                    </Border>
                    <Border BorderThickness="1" BorderBrush="DeepPink">
                        <StackPanel Orientation="Vertical">
                            <RadioButton GroupName="buildable2" Width="140" Name="Stadium" Command="{Binding SelectedBuildable}">Stadion</RadioButton>
                            <Image Source="Textures/missing_texture.png" Width="64"/>
                        </StackPanel>
                    </Border>
                    <Border BorderThickness="1" BorderBrush="DeepPink">
                        <StackPanel Orientation="Vertical">
                            <RadioButton GroupName="buildable2" Width="140" Name="FireStation" Command="{Binding SelectedBuildable}" >Tűzoltóság</RadioButton>
                            <Image Source="Textures/fire_station_a.png" Width="64"/>
                        </StackPanel>
                    </Border>
                    <Border BorderThickness="1" BorderBrush="DeepPink">
                        <StackPanel Orientation="Vertical">
                            <RadioButton GroupName="buildable2" Width="140" Name="PoliceStation" Command="{Binding SelectedBuildable}" >Rendőrség</RadioButton>
                            <Image Source="Textures/police_station_a.png" Width="64"/>
                        </StackPanel>
                    </Border>
                    
                </StackPanel>
            </TabItem>
            <TabItem Header="Költségek" >
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <ScrollViewer VerticalScrollBarVisibility="auto" Grid.Column="0">
                        <ItemsControl ItemsSource="{Binding Income}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding MoneyText}"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                        </ItemsControl>
                    </ScrollViewer>
                    <ScrollViewer VerticalScrollBarVisibility="auto" Grid.Column="1">
                        <ItemsControl ItemsSource="{Binding Expense}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding MoneyText}"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
